<style>
  *{
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body{
  font-family: "Roboto", sans-serif;
  }
  
.table{
  width: 100%;
  border-spacing: 0;
  text-align: left;
}
.th{
    font-weight: 300;
    font-size: 16px;
    color: #ffffff;
    line-height: 26px;
    padding: 18px 30px;
}
.thead .tr{ 
      background:black;
}
  .td {
    padding: 30px 30px 31px;
    font-weight :300;
    font-size: 16px;
    color: black-2;
    line-height :26px;
    text-transform: uppercase;
  }
  .tr:nth-child(even) {
    background: #f2f2f2;
  }
 

  .btn{
    display: inline-block;
    font-weight: 700;
    font-size: 15px;
    line-height: 25px;
    text-transform: uppercase;
    width: 170px;
    text-align :center;
    padding: 10px;
    border-radius: 3px;
    transition: background .3s ease;
    text-decoration :none;
  }
    .btn:hover {
        color:white;
    }
    .btn__active{
        color: green;
        border: 2px solid green;
    };
        .btn__active:hover{
            background:green;
        }
   




