<body>
  <h1 style="text-align: center;">List of requests</h1>
<div class = "main">
  
  <table class="table">
    <thead>
        <tr>
            <th>FirstName</th>
            <th>LastName</th>
            <th>Address</th>
            <th>Company Address</th>
            <th>Company Type</th>
            <th>Worker Count</th>
            <th>Objective</th>
            <th>Photo URL</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
      <form action="/verify" method="post">
      <% for (const item of data) { %>
        <tr>
          <td><%= item.firstName %></td>
          <td><%= item.lastName %></td>
          <td><%= item.address %></td>
          <td><%= item.companyAdress %></td>
          <td><%= item.companyType %></td>
          <td><%= item.staffCount %></td>
          <td><%= item.objective %></td>
          <td><%= item.photoURL %></td>
          <td type="submit" name="button <%=item.email%>" value="<%= item.email %>"><button>Pledged</button></td>
        </tr>
      <% } %>
      </form> 
    </tbody>
</table>
  
  
